<ul id = "kinds">
   <% Kind.all.each do |c| %>
   <li><%= link_to c.name, :action => "show_kinds", :id => c.id %></li>
   <% end %>
</ul>

<% if @institutions.blank? %>
<p>There are not any institutions currently in the system.</p>
<% else %>
<p>These are the current institutions in our system</p>

<ul id = "institutions">
   <% @institutions.each do |c| %>
    <li>
	   <%= link_to c.name, {:action => "show", :id => c.id} -%>
	   <b> <%= link_to 'Edit', {:action => "edit", :id => c.id} %></b>
	   <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      			:confirm => "Are you sure you want to delete this item?" %></b>
	</li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Institution", {:action => 'new' }%></p>

<p><%= link_to "Back", {:action => 'begpag'}%></p>
